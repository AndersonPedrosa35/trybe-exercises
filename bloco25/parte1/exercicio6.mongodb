use("erp");
db.vendas.aggregate([
  { $match: {
    dataVenda: {
      $gte: ISODate("2019-01-01"),
      $lte: ISODate("2019-12-31")
    }
  } },
 { $lookup: {
     from: "clientes",
     localField: "clienteId",
     foreignField: "clienteId",
     as: "descricao"
 } },
 { $group: {
     _id: "$descricao.endereco.uf",
     mediaVendas: { $avg: "$valorTotal" },
     totalVendas: { $sum: 1 }
 } }
])
